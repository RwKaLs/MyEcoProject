<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:id="@+id/clicker_layout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/game_area"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnClickerUpd"
        android:textColor="@color/money_color"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/show_next_coins"/>
    <ImageButton
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:id="@+id/btnClickerUpd"
        android:src="@drawable/update_btn"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_next_coins"
        android:layout_margin="10sp"/>
    <ImageButton
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:id="@+id/btnGameCountry"
        android:src="@drawable/country_btn"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/btnClickerUpd"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>