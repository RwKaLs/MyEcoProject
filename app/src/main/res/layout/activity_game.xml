<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:id="@+id/clicker_layout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/game_area"/>
    <Button
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/btnClickerUpd"
        android:text="UPD"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10sp"/>
    <Button
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/btnGameCountry"
        android:text="Co"
        app:layout_constraintTop_toBottomOf="@+id/btnClickerUpd"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10sp"/>

    <TextView
        android:id="@+id/textArrayshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/image_btn_Color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/game_area" />


</androidx.constraintlayout.widget.ConstraintLayout>