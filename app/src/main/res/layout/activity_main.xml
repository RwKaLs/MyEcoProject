<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/main_screen">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <!--Standart size width 200sp height 35sp-->
        <ImageButton
            android:id="@+id/game_btn"
            android:layout_width="100sp"
            android:layout_height="65sp"
            android:contentDescription="@string/todo"
            android:layout_margin="10sp"
            android:background="@color/image_btn_Color"
            android:scaleType="fitCenter"
            android:src="@drawable/controller">
        </ImageButton>
        <ImageButton
            android:id="@+id/map_btn"
            android:layout_width="100sp"
            android:layout_height="65sp"
            android:layout_margin="10sp"
            android:background="@color/image_btn_Color"
            android:contentDescription="@string/todo"
            android:scaleType="fitCenter"
            android:src="@drawable/map_marker_mainlayout" />
        <ImageButton
            android:id="@+id/profile_btn"
            android:layout_width="100sp"
            android:layout_height="65sp"
            android:layout_margin="10sp"
            android:background="@color/image_btn_Color"
            android:contentDescription="@string/todo"
            android:scaleType="fitCenter"
            android:src="@drawable/profile">
        </ImageButton>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>